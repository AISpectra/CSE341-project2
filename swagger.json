{
  "openapi": "3.0.0",
  "info": {
    "title": "Project 2 API",
    "version": "1.0.0",
    "description": "Products and Categories API (CSE341 Project 2)"
  },
  "servers": [
    { "url": "http://localhost:8080", "description": "Local" }
  ],
  "tags": [
    { "name": "Categories" },
    { "name": "Products" }
  ],
  "paths": {
    "/categories": {
      "get": {
        "summary": "Get all categories",
        "tags": ["Categories"],
        "responses": {
          "200": { "description": "List of categories" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a category",
        "tags": ["Categories"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CategoryInput" },
              "examples": {
                "example": {
                  "value": { "name": "BOARD_GAMES", "description": "Board games and tabletop products" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created (returns id)" },
          "400": { "description": "Validation error" },
          "409": { "description": "Duplicate key" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/categories/{id}": {
      "get": {
        "summary": "Get a category by id",
        "tags": ["Categories"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Category found" },
          "400": { "description": "Invalid id format" },
          "404": { "description": "Category not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update a category by id",
        "tags": ["Categories"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CategoryInput" }
            }
          }
        },
        "responses": {
          "204": { "description": "Updated successfully" },
          "400": { "description": "Invalid id format or validation error" },
          "404": { "description": "Category not found" },
          "409": { "description": "Duplicate key" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete a category by id",
        "tags": ["Categories"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "204": { "description": "Deleted successfully" },
          "400": { "description": "Invalid id format" },
          "404": { "description": "Category not found" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Get all products",
        "tags": ["Products"],
        "responses": {
          "200": { "description": "List of products" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "summary": "Create a product",
        "tags": ["Products"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductInput" },
              "examples": {
                "example": {
                  "value": {
                    "name": "Speed Steal",
                    "sku": "SS-001",
                    "price": 15,
                    "currency": "EUR",
                    "inStock": true,
                    "quantity": 1000,
                    "tags": ["card game", "fast", "party"],
                    "categoryId": "679135f98364a0461129ef52"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Created (returns id)" },
          "400": { "description": "Validation error / missing required fields" },
          "409": { "description": "Duplicate key" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Get a product by id",
        "tags": ["Products"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Product found" },
          "400": { "description": "Invalid id format" },
          "404": { "description": "Product not found" },
          "500": { "description": "Server error" }
        }
      },
      "put": {
        "summary": "Update a product by id",
        "tags": ["Products"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ProductInput" }
            }
          }
        },
        "responses": {
          "204": { "description": "Updated successfully" },
          "400": { "description": "Invalid id format or validation error" },
          "404": { "description": "Product not found" },
          "409": { "description": "Duplicate key" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete a product by id",
        "tags": ["Products"],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "204": { "description": "Deleted successfully" },
          "400": { "description": "Invalid id format" },
          "404": { "description": "Product not found" },
          "500": { "description": "Server error" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CategoryInput": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      },
      "ProductInput": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "sku": { "type": "string" },
          "price": { "type": "number" },
          "currency": { "type": "string", "enum": ["EUR", "USD"] },
          "inStock": { "type": "boolean" },
          "quantity": { "type": "number" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "categoryId": { "type": "string" }
        },
        "required": ["name", "sku", "price", "currency", "quantity", "categoryId"]
      }
    }
  }
}
